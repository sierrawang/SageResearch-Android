<resources>

    <style
        name="Widget.ResearchStack.NavigationActionBar.PrimaryButton"
        parent="Research.ButterScotch.RoundedCornerMaterialButton">
        <item name="android:minHeight">@dimen/rs2_step_navigation_primary_button_min_height</item>
    </style>

    <style
        name="Widget.ResearchStack.NavigationActionBar.PrimaryButton.Forward"
        parent="Widget.ResearchStack.NavigationActionBar.PrimaryButton">
        <item name="android:text">@string/rs2_navigation_action_forward</item>
    </style>

    <style name="Widget.ResearchStack.NavigationActionBar.PrimaryButton.Backward"
        parent="Widget.ResearchStack.NavigationActionBar.PrimaryButton">
        <item name="android:text">@string/rs2_navigation_action_backward</item>
    </style>

    <style name="Widget.ResearchStack.NavigationActionBar.Skip"
        parent="Research.ImageButton">
        <item name="android:textColor">@color/royal500</item>
        <item name="android:text">@string/rs2_navigation_action_skip</item>
    </style>

    <style name="Widget.ResearchStack.NavigationActionBar.Shadow" parent="">
        <item name="android:background">@drawable/scroll_view_shadow</item>
    </style>

    <style name="Widget.ResearchStack.NavigationActionBar" parent="">
        <item name="isBackwardHidden">false</item>
        <item name="isForwardHidden">false</item>
        <item name="isSkipHidden">false</item>
        <item name="isShadowHidden">false</item>
        <item name="isSkipAllowed">true</item>
        <item name="primaryActionColor">@color/colorSecondary</item>
        <item name="primaryActionTitleColor">@color/colorTextSecondary</item>
        <item name="skipActionColor">@color/royal500</item>
    </style>

    <style name="Widget.ResearchStack.NavigationActionBar.BottomSheet" parent="Widget.ResearchStack.NavigationActionBar">
        <item name="isBackwardHidden">true</item>
        <item name="isShadowHidden">true</item>
        <item name="isSkipHidden">false</item>
    </style>

    <style name="Widget.ResearchStack.NavigationActionBar.Instruction" parent="Widget.ResearchStack.NavigationActionBar">
        <item name="isBackwardHidden">true</item>
        <item name="isSkipHidden">true</item>
    </style>

    <style name="Widget.ResearchStack.NavigationActionBar.Overview" parent="Widget.ResearchStack.NavigationActionBar">
        <item name="isBackwardHidden">true</item>
        <item name="isSkipAllowed">false</item>
    </style>

    <style name="Widget.ResearchStack.NavigationActionBar.Completion" parent="Widget.ResearchStack.NavigationActionBar">
        <item name="isBackwardHidden">true</item>
        <item name="isSkipHidden">true</item>
        <item name="isShadowHidden">true</item>
    </style>

    <style name="Widget.ResearchStack.NavigationActionBar.Active" parent="Widget.ResearchStack.NavigationActionBar">
        <item name="isBackwardHidden">true</item>
        <item name="isShadowHidden">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="primaryActionColor">@color/colorSecondary</item>
        <item name="skipActionColor">@color/appWhite</item>
    </style>
</resources>